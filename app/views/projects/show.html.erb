<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<p>
  <strong>Color:</strong>
  <%= @project.color %>
</p>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>

<hr>

<h2>Task Lists</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project.task_lists.each do |task_list| %>
      <tr>
        <td><%= task_list.name %></td>
        <td><%= task_list.project.name %></td>
        <td><%= link_to 'Show', project_task_list_path(id: task_list, project_id: @project.id) %></td>
        <td><%= link_to 'Edit', edit_project_task_list_path(id: task_list, project_id: @project.id) %></td>
        <td><%= link_to 'Destroy', project_task_list_path(id: task_list, project_id: @project.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task List', new_project_task_list_path(project_id: @project.id) %>
