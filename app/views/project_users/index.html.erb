<p id="notice"><%= notice %></p>
<header>
    <h2>Modifier les membres du projet</h2>
</header>

<main class="center">
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Role</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_users.each do |project_user| %>
      <tr>
        <td><%= project_user.user.username %></td>
        <td><%= project_user.role %></td>
        <td><%= project_user.project_id %></td>
        <td><%= link_to 'Destroy', project_project_user_path(id: project_user.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= render 'form', project_user: @project_user %>
<%= link_to 'Retour', project_path(@project), class:"subtitle-action" %>
</main>