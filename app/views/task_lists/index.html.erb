<p id="notice"><%= notice %></p>

<h1>Task Lists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_lists.each do |task_list| %>
      <tr>
        <td><%= task_list.name %></td>
        <td><%= task_list.project.name %></td>
        <td><%= link_to 'Show', project_task_list_path(id: task_list) %></td>
        <td><%= link_to 'Edit', edit_project_task_list_path(id: task_list) %></td>
        <td><%= link_to 'Destroy', project_task_list_path(id: task_list), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

